<svg width="200" height="200" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="pillGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#4F46E5;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#7C3AED;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <!-- Fondo -->
  <rect width="200" height="200" fill="#F8FAFC"/>
  
  <!-- Pastilla/Cápsula -->
  <ellipse cx="100" cy="100" rx="60" ry="30" fill="url(#pillGradient)" stroke="#1E293B" stroke-width="2"/>
  
  <!-- Línea divisoria -->
  <line x1="100" y1="70" x2="100" y2="130" stroke="#FFFFFF" stroke-width="2"/>
  
  <!-- Texto -->
  <text x="100" y="160" text-anchor="middle" font-family="Arial, sans-serif" font-size="14" fill="#64748B">Paracetamol</text>
  
  <!-- Cruz médica -->
  <g transform="translate(100,100)">
    <rect x="-3" y="-15" width="6" height="30" fill="#FFFFFF" opacity="0.8"/>
    <rect x="-15" y="-3" width="30" height="6" fill="#FFFFFF" opacity="0.8"/>
  </g>
</svg>